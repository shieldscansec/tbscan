{
  "name": "sentinelcore",
  "version": "1.0.0",
  "description": "SentinelCore - Painel Web Empresarial para Gerenciamento de Servidores SA-MP | Desenvolvido pela Shield Scan Security",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd backend && npm run start:dev",
    "client:dev": "cd frontend && npm start",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd frontend && npm run build",
    "server:build": "cd backend && npm run build",
    "start": "cd backend && npm run start:prod",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "samp",
    "server-management",
    "hosting",
    "panel",
    "security",
    "shield-scan"
  ],
  "author": "Shield Scan Security",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}