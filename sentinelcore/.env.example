# SentinelCore Configuration Example
# Copy this file to .env and customize the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000
API_PREFIX=api/v1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=database
DB_PORT=5432
DB_NAME=sentinelcore
DB_USER=sentinel_admin
DB_PASSWORD=change_me_secure_password_here
DB_MAX_CONNECTIONS=20

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password_here

# ===========================================
# SECURITY SETTINGS
# ===========================================
JWT_SECRET=change_me_jwt_secret_super_secure_key_here
REFRESH_TOKEN_SECRET=change_me_refresh_token_secret_here
ENCRYPTION_KEY=change_me_encryption_key_32_chars_here
SESSION_SECRET=change_me_session_secret_here

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Brute Force Protection
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
UPLOAD_MAX_SIZE=104857600
UPLOAD_ALLOWED_TYPES=image/*,text/*,.amx,.pwn,.inc,.cfg,.txt,.log
MAX_FILE_UPLOADS=10

# ===========================================
# PATHS CONFIGURATION
# ===========================================
SERVER_DATA_PATH=/app/servers
BACKUP_PATH=/app/backups
LOGS_PATH=/app/logs
UPLOADS_PATH=/app/uploads
TEMP_PATH=/tmp/sentinelcore

# ===========================================
# FEATURES TOGGLE
# ===========================================
FEATURE_REGISTRATION=true
FEATURE_2FA=true
FEATURE_FILE_UPLOAD=true
FEATURE_SERVER_CONSOLE=true
FEATURE_BACKUPS=true
FEATURE_MONITORING=true
FEATURE_NOTIFICATIONS=true

# ===========================================
# SA-MP SERVER SETTINGS
# ===========================================
MAX_SERVER_INSTANCES=100
DEFAULT_SERVER_TYPE=samp_037

# ===========================================
# MONITORING SETTINGS
# ===========================================
GRAFANA_PASSWORD=change_me_grafana_password_here
PROMETHEUS_RETENTION=15d

# ===========================================
# SHIELD SCAN SECURITY
# ===========================================
SHIELD_SCAN_LICENSE=your_license_key_here_optional
OFFLINE_MODE=false

# ===========================================
# MAINTENANCE MODE
# ===========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manutenção. Tente novamente em alguns minutos.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ===========================================
# LOCALIZATION
# ===========================================
DEFAULT_LANGUAGE=pt-BR
SUPPORTED_LANGUAGES=pt-BR,en-US
TIMEZONE=America/Sao_Paulo

# ===========================================
# EMAIL SETTINGS (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=SentinelCore <noreply@shieldscan.com>

# ===========================================
# DISCORD INTEGRATION (Optional)
# ===========================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_id_here
DISCORD_LOG_CHANNEL=your_log_channel_id_here

# ===========================================
# BACKUP SETTINGS
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# ===========================================
# LOG SETTINGS
# ===========================================
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD